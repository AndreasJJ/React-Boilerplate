{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "A React boilerplate w/ TypeScript",
  "main": "index.tsx",
  "scripts": {
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "docz:serve": "docz build && docz serve",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint --fix --ignore-path .eslintignore --ext js,jsx,ts,tsx,mdx .",
    "check-types": "tsc",
    "watch": "webpack --config webpack.config.js --watch",
    "build": "webpack --config webpack.config.js",
    "start": "webpack-dev-server --open --config webpack.config.js --history-api-fallback --host 0.0.0.0 --port 8080"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AndreasJJ/React-Boilerplate.git"
  },
  "keywords": [
    "React",
    "typescript",
    "boilerplate",
    "webpack"
  ],
  "author": "Andreasjj",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AndreasJJ/React-Boilerplate/issues"
  },
  "homepage": "https://github.com/AndreasJJ/React-Boilerplate#readme",
  "dependencies": {
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.1.0",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.3",
    "date-fns": "^2.16.1",
    "history": "^5.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^6.8.6",
    "react-router-dom": "^5.2.0",
    "react-switch": "^5.0.1",
    "styled-components": "^5.2.0",
    "styled-icons": "^10.22.0",
    "swr": "^0.3.5",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@types/jest": "^26.0.14",
    "@types/react": "^16.9.50",
    "@types/yup": "^0.29.7",
    "@typescript-eslint/parser": "^4.3.0",
    "docz": "^2.3.1",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-typescript-prettier": "^3.1.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-mdx": "^1.8.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.3",
    "gatsby-plugin-react-svg": "^3.0.0",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.2",
    "source-map-loader": "^1.1.0",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
